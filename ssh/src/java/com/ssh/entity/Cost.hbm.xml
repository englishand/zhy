<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.ssh.entity.Cost" table="COST_CHANG">
    <id 
        name="id"
        type="java.lang.Integer"
        column="ID">
        <generator class="assigned" />
    </id>
    <property name="name" type="java.lang.String" length="50" column="NAME"/>
    <property name="baseDuration" type="java.lang.Integer" column="BASE_DURATION"/>
    <property name="baseCost" type="java.lang.Float" column="BASE_COST"/>
    <property name="unitCost" type="java.lang.Float" column="UNIT_COST"/>
    <property name="status" type="java.lang.String" length="1" column="STATUS"/>
    <property name="descr" type="java.lang.String" length="100" column="DESCR"/>
    <property name="startTime" type="java.util.Date" column="STARTIME"/>
    <property name="creaTime" type="java.util.Date" column="CREATIME"/>
    <property name="costType" type="java.lang.String" length="1" column="COST_TYPE"/>
    </class>
</hibernate-mapping>
